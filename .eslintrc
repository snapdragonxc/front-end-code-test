{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "flowtype"
  ],
  "rules": {
    "no-param-reassign": [2, { "props": false }],
    "react/prop-types": 0,
    "no-underscore-dangle": [2, { "allow": ["_id"] }],
    'no-plusplus': [2, { allowForLoopAfterthoughts: true }],
    "no-control-regex": 0,
    "no-useless-escape": 0,
    "import/prefer-default-export": "off"
  },
  settings: {
    'import/resolver': {
      node: {
        extensions: ['.js']
      }
    },
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:flowtype/recommended",
    "airbnb-base"
  ],
  "env": {
      "browser": true,
      "node": true
  }
}
